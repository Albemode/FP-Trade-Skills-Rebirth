<!DOCTYPE html>
<html>
  <head>
    <title>Trade Skills Rebirth</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
<body id="colorb">
  <nav id="navbg">
      <span>Trade Skills Rebirth</span>
      <ul>
        <li><%= link_to "Skills", skills_path%></li>
        <li><%= link_to "Home", homes_path%></li>
        <li></li>
      </ul>
      <div class="sign">
        <div id="navbarCollapse" class="collapse navbar-collapse">

            <ul class="nav navbar-nav">
              <li class="dropdown">
                  <a data-toggle="dropdown" class="dropdown-toggle" href="#">Login<b class="caret"></b></a>
                  <ul role="menu" class="dropdown-menu">


                    <% if master_signed_in? %>
                    <li><%= link_to "Sign out", destroy_master_session_path, :method => :delete%></li>
                    <% else %>
                    <li><%= link_to "Master", new_master_session_path %></li>
                    <% end %>
                    
                    <% if apprentice_signed_in? %>
                    <li><%= link_to "Sign out", destroy_apprentice_session_path, :method => :delete%></li>
                    <% else %>
                    <li><%= link_to "Apprentice", new_apprentice_session_path %></li>
                    <% end %>
                  </ul>
              </li>

              <li class="dropdown">
                  <a data-toggle="dropdown" class="dropdown-toggle" href="#">Register<b class="caret"></b></a>
                  <ul role="menu" class="dropdown-menu">
                    <li><%= link_to "Master", new_master_registration_path %></li>
                    <li><%= link_to "Apprentice", new_apprentice_registration_path %></li>
                  </ul>
              </li>
      </div>
  </nav>

      <% if notice %><p class="notice"><%= notice %></p><%end%>
      <%= alert %><p class="alert"><%= alert %></p>

    <%= yield %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <footer>
        <p class="copyright">&copy; 2016 - Trade Skills Rebirth</p>
    </footer>
  </body>
</html>
